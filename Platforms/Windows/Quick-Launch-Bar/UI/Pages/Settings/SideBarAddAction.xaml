<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Quick_Launch_Bar.UI.Pages.Settings.SideBarAddAction"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Quick_Launch_Bar.UI.Pages.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="8">
            <TextBlock Text="命名你的操作："/>
            <TextBox/>
            <TextBlock Text="设置你希望通过这个按钮可以进行的操作："/>
            <Grid Grid.Row="1"
                  Background="{StaticResource LayerFillColorAltBrush}"
                  BorderBrush="{StaticResource AppBarBorderThemeBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                
                <GridView>
                    
                </GridView>

                <Button Background="Transparent"
                        BorderBrush="Transparent"
                        Click="Button_Click"
                        Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal"
                            Spacing="8">
                        <FontIcon Glyph="&#xE710;" />
                        <TextBlock Text="添加操作"/>
                    </StackPanel>
                </Button>
            </Grid>

            <ComboBox Header="设置显示样式"
                      MinWidth="200"
                      SelectedIndex="0">
                <x:String>普通按钮</x:String>
                <x:String>切换式按钮</x:String>
                <x:String>拆分按钮</x:String>
                <x:String>切换式拆分按钮</x:String>
                <x:String>下拉按钮</x:String>
            </ComboBox>

            <TextBlock Text="是否启用"/>
            <ToggleSwitch OffContent="禁用"
                          OnContent="启用"
                          x:Name="ToS"
                          Toggled="ToS_Toggled"/>
        </StackPanel>

    </ScrollViewer>
</Page>
