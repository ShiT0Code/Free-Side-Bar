<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Quick_Launch_Bar.UI.Pages.Settings.SideBarSetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Quick_Launch_Bar.UI.Pages.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="18">
        <Grid Height="78"
              HorizontalAlignment="Stretch"
              Background="{StaticResource LayerFillColorAltBrush}"
              CornerRadius="8"
              BorderBrush="{StaticResource AppBarBorderThemeBrush}"
              BorderThickness="1"
              Padding="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="启用全局侧边栏"
                       VerticalAlignment="Center"/>

            <TextBlock Text="这将会在你的屏幕边缘显示它"
                       VerticalAlignment="Center"
                       Grid.Row="1"
                       Style="{StaticResource CaptionTextBlockStyle}"/>

            <ToggleSwitch OnContent=""
                          OffContent=""
                          Grid.Column="2"
                          Grid.RowSpan="2"
                          VerticalAlignment="Center"
                          IsOn="{x:Bind SwitchViewModel.DefaultSettings.SideBar}"
                          Toggled="ToggleSwitch_Toggled"
                          x:Name="Tog"/>
        </Grid>

        <Expander>
            <Expander.Resources>
                <Style TargetType="Expander">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </Expander.Resources>

            <Expander.Header>
                <Grid Padding="18">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="固定的应用、操作"
                        VerticalAlignment="Center"/>
                </Grid>
            </Expander.Header>

            <Expander.Content>
                <Grid RowSpacing="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal"
                                Spacing="18">
                        <Button Click="Button_Click"
                                IsEnabled="False"
                                x:Name="EditButton">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8">
                                <FontIcon Glyph="&#xE70F;" />
                                <TextBlock Text="选择一个以编辑"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource AccentButtonStyle}"
                                Click="Button_Click_1">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8">
                                <FontIcon Glyph="&#xE710;" />
                                <TextBlock Text="添加"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Grid Grid.Row="1"
                          Background="{StaticResource LayerFillColorAltBrush}"
                          BorderBrush="{StaticResource AppBarBorderThemeBrush}"
                          BorderThickness="1"
                          MinHeight="300"
                          CornerRadius="8"
                          Padding="12">
                        <ItemsView SelectionMode="Single"
                            ItemsSource="{x:Bind ViewModels.Items}"
                            SelectionChanged="ItemsView_SelectionChanged">
                            
                            <ItemsView.Layout>
                                <UniformGridLayout MinColumnSpacing="20"/>
                            </ItemsView.Layout>
                            
                            <ItemsView.ItemTemplate>
                                <DataTemplate x:DataType="local:SiderBarItems">
                                    <ItemContainer>
                                        <Grid Padding="8"
                                              Height="100"
                                              Width="100"
                                              ToolTipService.ToolTip="{x:Bind Description}">
                                            <StackPanel>
                                                
                                                <TextBlock Text="{x:Bind Name}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Bottom"/>
                                            </StackPanel>
                                        </Grid>
                                    </ItemContainer>
                                </DataTemplate>
                            </ItemsView.ItemTemplate>
                        </ItemsView>
                    </Grid>
                </Grid>
            </Expander.Content>
        </Expander>
    </StackPanel>
</Page>
